<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_margin="10dip"
    android:background="@color/main_background"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="30dip"
    tools:context="${packageName}.${activityClass}" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dip"
        android:text="@string/title_main"
        android:textSize="24.5sp" />

    <Button
        android:id="@+id/activity_simple_launch_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/simple_activity_launch_label" />

    <Button
        android:id="@+id/activity_2d_launch_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/activity_2d_launch_label" />

    <Button
        android:id="@+id/activity_storage_launch_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/activity_storage_launch_label" />

    <Button
        android:id="@+id/activity_web_launch_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/activity_web_launch_label" />
    
    <Button
        android:id="@+id/activity_async_launch_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/activity_async_launch_label" />
    
    <Button
        android:id="@+id/about_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/about_label" />

</LinearLayout>